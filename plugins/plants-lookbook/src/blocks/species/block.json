{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "plants-lookbook/species",
	"title": "Species",
	"category": "custom-blocks",
	"description": "A block to display species information.",
	"example": {},
	"supports": {
		"align": ["wide", "full"],
		"html": false,
		"renaming": false
	},
	"editorScript": "plants-lookbook/species/block",
	"editorStyle": "plants-lookbook/species/editor",
	"style": "plants-lookbook/species/style",
	"render": "../../../render/block-species.php",
	"attributes": {
		"flipped": {
			"type": "boolean",
			"default": false
		},
		"speciesFormalName": {
			"type": "string",
			"default": ""
		},
		"speciesCommonName": {
			"type": "string",
			"default": ""
		},
		"speciesDescription": {
			"type": "string",
			"default": ""
		},
		"speciesImage": {
			"type": "object",
			"default": {}
		}
	},
	"styles": [
		{
			"name": "dark",
			"label": "Dark"
		},
		{
			"name": "boxed",
			"label": "Boxed"
		}
	]
}
